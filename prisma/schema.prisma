generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobStatus {
  DRAFT
  ACTIVE
  CLOSED
}

enum ContractorType {
  INDIVIDUAL
  IP
  COMPANY
}

enum InviteStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  jobs      Job[]
  createdAt DateTime @default(now())
}

model Job {
  id          String    @id @default(uuid())
  title       String
  description String?
  region      String
  price       Int
  status      JobStatus @default(DRAFT)

  userId      String?
  user        User?     @relation(fields: [userId], references: [id])
  invites     Invite[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Contractor {
  id        String          @id @default(uuid())
  name      String
  phone     String          @unique
  type      ContractorType
  region    String
  active    Boolean         @default(true)

  invites   Invite[]

  createdAt DateTime        @default(now())
}

model Invite {
  id             String       @id @default(uuid())
  jobId          String
  contractorId   String
  status         InviteStatus @default(PENDING)

  job            Job          @relation(fields: [jobId], references: [id])
  contractor     Contractor   @relation(fields: [contractorId], references: [id])

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@unique([jobId, contractorId])
}
